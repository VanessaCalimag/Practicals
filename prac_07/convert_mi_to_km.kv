BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ' '
            font_size: 32
            on_text: app.calculate_mi_to_km(float(input_number.text))
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
            Button:
                text: 'Down'
    Button:
        text: 'Convert mi to km'
        font_size: 24
    Label:
        id: output_label
        text: ' '
        font_size: 32
        color: (1, 1, 0, 1)
